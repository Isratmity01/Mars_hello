<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"

    android:id="@+id/message_holder_sender"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sendersticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:57 pm"
                android:textSize="5pt"
                android:textColor="@color/time_stamp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/stickerimage"
                android:layout_toStartOf="@+id/stickerimage" />

           <ImageView
               android:layout_width="128dp"
               android:layout_height="128dp"
               android:layout_toLeftOf="@+id/delivery_status_senderstk"

               android:layout_toStartOf="@+id/delivery_status_senderstk"
               android:id="@+id/stickerimage"/>
            <ImageView
                android:id="@+id/delivery_status_senderstk"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/stickerimage"
                app:srcCompat="@drawable/seen_status" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>