<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.grameenphone.mars.activity.PrivacySettingsActivity">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#edf0f6" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/contacts_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_contacts_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contacts_icon"
            android:text="ফোন কন্টাক্ট ব্যবহার করুন"
            android:textSize="18sp"
            android:textColor="#8190a7"
              android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:id="@+id/contacts_text" />

        <Switch
            android:id="@+id/contacts_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_alignBottom="@+id/contacts_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blocklist"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/block_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_block_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/block_icon"
            android:text="ব্লক লিস্ট"
            android:textSize="18sp"
            android:textColor="#8190a7"
            android:layout_marginLeft="10dp"
            android:id="@+id/block_text" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#edf0f6" />
</LinearLayout>
